{{> menu id="bookmarks" }}

<section class="ui segment noBorder">

  <h1 class="ui center aligned icon header">
    <i class="circular icon write"></i>
    New Bookmark
  </h1>

  {{#if error }}

    <div class="ui negative message">
      <div class="header">Whoops, Something went wrong...</div>
      <p>{{ error }}</p>
    </div>

  {{/if}}

    <form action="/bookmarks/folder/{{ folderid }}/new/" method="post" enctype="multipart/form-data" class="ui stacked segment form">
      <div class="required field">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" placeholder="Bookmark Title">
      </div>
      <div class="required field">
        <label for="link">Link</label>
        <input type="text" name="link" id="link" placeholder="Bookmark Link">
      </div>
      <div class="required field">
        <label for="picture">Image</label>
        <input type="file" name="picture"></input>
      </div>
      <div class="required field">
        <label for="summary">Summary</label>
        <textarea name="summary" id="summary" cols="30" rows="10" placeholder="Bookmark Summary"></textarea>
      </div>
      <button class="ui blue submit icon button"><i class="icon plus"></i> Add Bookmark</button>
    </form>

</section>
